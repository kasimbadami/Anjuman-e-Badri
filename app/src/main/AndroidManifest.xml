        <activity
            android:name="mumineen.connect.app.FullScreenActivity"
            android:parentActivityName="mumineen.connect.app.NotificationDetailsActivity" />
        <activity android:name="mumineen.connect.app.MainActivity" />
        <activity android:name="mumineen.connect.app.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mumineen.connect.app.NotificationActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="mumineen.connect.app.NotificationDetailsActivity"
            android:launchMode="singleInstance">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mumineen.connect.app.NotificationActivity" />
        </activity>

        <service
            android:name="mumineen.connect.app.RegistrationIntentService"
            android:exported="false" />
